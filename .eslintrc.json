{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    ],
    "plugins": [
        "@typescript-eslint"
    ], 
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": ["**/tsconfig.json"]
    },
    "rules": {
        "@typescript-eslint/no-misused-promises": "off",
        "@typescript-eslint/restrict-template-expressions": "off",
        "@typescript-eslint/strict-boolean-expressions": "off"
    }
}
